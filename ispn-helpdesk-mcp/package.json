{
  "name": "ispn-helpdesk-mcp",
  "version": "1.0.0",
  "type": "module",
  "description": "ISPN Helpdesk Bridge MCP Server - ElevenLabs agent handoff to helpdesk tickets",
  "main": "dist/mcp-server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev:mcp": "tsx src/mcp-server.ts",
    "dev:http": "nodemon --exec tsx src/http-server.ts",
    "dev": "concurrently \"npm run dev:mcp\" \"npm run dev:http\"",
    "build": "tsc",
    "start:mcp": "node dist/mcp-server.js",
    "start:http": "node dist/http-server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run tests/integration",
    "test:unit": "vitest run tests/unit",
    "lint": "echo 'Add ESLint if needed'",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "helpdesk",
    "elevenlabs",
    "agent",
    "webhook"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "libphonenumber-js": "^1.12.26",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@vitest/ui": "^4.0.8",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
